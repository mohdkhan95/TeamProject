	//start of rotation method
	public BufferedImage rotate90ToRight( BufferedImage img_last ){
		int width = img_last.getWidth();
		int height = img_last.getHeight();
		BufferedImage returnImage = new BufferedImage( height, width , img_last.getType());

		for( int x = 0; x < width; x++ ) {
			for( int y = 0; y < height; y++ ) {
				returnImage.setRGB( height - y -1, x, img_last.getRGB( x, y  )  );
			}
		}
		return returnImage;
	} //end of buffered image
	
	
	
	
