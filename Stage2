		// block1
		jb.get(0).addActionListener(new ActionListener() {
			int count = 1;
			public void actionPerformed(ActionEvent e) {
				blk = 0;
				System.out.println("Block 1 pressed");
				if (FillCheck.contains(blk) == false)
				{
					if (callAllowPlaceBlock(0, 0) == true)
						callSelectBlock(blk);
				}
				else
				{
					System.out.println("Tile already exists!");
					
					if(count==5)
						count = 1;
					System.out.println("Rotated " + (count*90) + " degrees.");
					callSelectBlockRotate(blk, count);
					count++;
				}
			}
