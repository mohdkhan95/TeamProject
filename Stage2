			public void actionPerformed(ActionEvent e) {
				blk = 67;
				System.out.println("Block 68 pressed");
				if (FillCheck.contains(blk) == false) {
					if (callAllowPlaceBlock(3, 8) == true)
						callSelectBlock(blk);
				} else {
					System.out.println("Tile already exists!");
				}
			}
		});
		// block69
		jb.get(68).addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				blk = 68;
				System.out.println("Block 69 pressed");
				if (FillCheck.contains(blk) == false) {
					if (callAllowPlaceBlock(4, 8) == true)
						callSelectBlock(blk);
